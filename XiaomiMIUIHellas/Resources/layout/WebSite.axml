<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/firstlinearwebview"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#ff546e7a">
    <TextView
        android:text="@string/loadingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadingtext"
        android:gravity="center"
        android:layout_gravity="center" />
    <RelativeLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayoutwebSite"
        android:nestedScrollingEnabled="true"
        android:background="#ff546e7a">
        <ImageButton
            android:src="@drawable/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homebuttonWebSite"
            android:background="#01000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
        <ImageButton
            android:src="@drawable/reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refreshbuttonWebSite"
            android:layout_alignParentRight="true"
            android:background="#01000000"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
        <android.webkit.WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/webSiteView"
            android:scrollbars="vertical"
            android:overScrollMode="ifContentScrolls"
            android:layout_marginTop="2dp"
            android:background="#ff546e7a"
            android:layout_below="@+id/homebuttonWebSite"
            android:layout_alignParentBottom="true" />
        <ImageButton xmlns:tools="http://schemas.android.com/tools"
            android:src="@drawable/forwardbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forwardpageButton"
            android:layout_toLeftOf="@id/refreshbuttonWebSite"
            android:background="#01ffffff"
            android:layout_marginRight="20.0dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp" />
        <ImageButton xmlns:tools="http://schemas.android.com/tools"
            android:src="@drawable/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backpageButton"
            android:layout_toRightOf="@id/homebuttonWebSite"
            android:background="#01ffffff"
            android:layout_marginLeft="20.0dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp" />
    </RelativeLayout>
</LinearLayout>